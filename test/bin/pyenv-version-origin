#!/usr/bin/env bash
# Usage: pyenv version-name
# Summary: Fake version-name command.

set -e
[ -n "$PYENV_DEBUG" ] && set -x

if [ -n "$VERSION_ORIGIN_HOOK" ]; then
  source "$VERSION_ORIGIN_HOOK"
fi

if [ -n "$PYENV_VERSION_ORIGIN" ]; then
  echo "$PYENV_VERSION_ORIGIN"
elif [ -n "$PYENV_VERSION" ]; then
  echo "PYENV_VERSION environment variable"
else
  echo "${PWD}/.python-version"
fi
